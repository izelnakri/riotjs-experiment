<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Styleguide</title>
    <meta name="description" content="Styleguide">

    <!-- optional: Social media tags -->

    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <!-- add the other favicons here
    <link rel="apple-touch-icon" href="">
    <link rel="apple-touch-icon" sizes="76x76" href="">
    <link rel="apple-touch-icon" sizes="120x120" href="">
    <link rel="apple-touch-icon" sizes="152x152" href="/"> -->

    <link rel="stylesheet" media="all" href="/css/<%= assets['application.css'] %>">
  </head>
  <body>
    <% content %>

    <script src="/js/system.js"></script>
    <script>
        System.config({
            baseURL: '/',
            map: {
                jquery: '//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js',
                lodash: '//cdnjs.cloudflare.com/ajax/libs/lodash.js/4.6.1/lodash.min.js',
                riot: '//cdnjs.cloudflare.com/ajax/libs/riot/2.3.17/riot+compiler.min.js',
                vendor: '/js/<%- assets['vendor.js'] %>',
                plugins: '/js/<%- assets['plugins.js'] %>',
                views: '/js/<%- assets['views.js'] %>',
                copy: '/js/<%- assets['copy.js'] %>',
                app: '/js/<%- assets['app.js'] %>',
                styleguide: '/js/styleguide.js'
            },
            meta: {
                vendor: {
                    'format': 'global'
                },
                views: {
                    'format': 'global',
                    deps: 'riot'
                },
                riot: {
                    'format': 'global'
                },
                plugins: {
                    'format': 'global',
                    deps: 'jquery'
                },
                styleguide: {
                    'format': 'global',
                    deps: ['jquery']
                },
                app: {
                    deps: [
                    'jquery', 'lodash',  'riot', 'vendor', 'plugins', 'views', 'copy'
                    ]
                }
            }
        });

        System.import('app').then(function(app) {
            console.log('App is loaded');
            System.import('styleguide').then(function() {
                console.log('App is loaded');
            });
        });


    </script>
  </body>
</html>
